mixin videoBlock(video = {})
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.videoBlock__thumbnail(src=video.src controls="false")
            h4.videoBlock__title=video.title
            if video.views === 1
                h6.videoBlcok___views 1 view
            else
                 h6.videoBlcok___views #{video.views} views